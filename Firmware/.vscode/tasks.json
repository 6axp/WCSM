{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Powershell",
            "type": "shell",
            "command": "cmd /c start powershell.exe",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Start Terminal",
            "type": "shell",
            "command": "D:/Projects/STM32/Utilities/uart_terminal/Terminal.exe",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Kill Terminal",
            "type": "shell",
            "command": "KillTerminal.bat",
            "options": {
                "cwd": "D:/Projects/STM32/Utilities/uart_terminal",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make -s clean",
            "options": {
                "cwd": "${workspaceRoot}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build & Flash",
            "type": "shell",
            "command": "make -s -j 10 all&&D:/Projects/STM32/Utilities/st_link/ST-LINK_CLI.exe -c SWD -p Build/wcsm_firmware.bin 0x08000000 -v \"while_programming\" -rst",
            "options": {
                "cwd": "${workspaceRoot}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make -s -j 10 all",
            "options": {
                "cwd": "${workspaceRoot}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}